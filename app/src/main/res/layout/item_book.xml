<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <com.unicorn.csp.other.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_widthPercent="35%" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:text="刑事诉讼法2013"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                custom:progress_reached_bar_height="2.5dp"
                custom:progress_reached_color="?attr/colorAccent"
                custom:progress_text_color="?attr/colorAccent"
                custom:progress_text_size="10sp"
                custom:progress_unreached_bar_height="1.5dp" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="苏菲也差不多是你这个年纪  在奇妙的下午被一个神秘的人引导她认识了欧洲哲学的"
                android:textColor="#888" />

        </LinearLayout>

    </com.unicorn.csp.other.PercentLinearLayout>

</android.support.v7.widget.CardView>