<com.unicorn.csp.other.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llHotSpot"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="20%">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hot_spot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯热点"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStudyField"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="20%">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/study_field" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习园地"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSocialRegion"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="20%">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/social_region" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="互动专区"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMyStudy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="20%">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_study" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的学习"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBookCity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="20%">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:src="@drawable/book_city" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学术交流"
            android:textSize="12dp" />

    </LinearLayout>

</com.unicorn.csp.other.PercentLinearLayout>
